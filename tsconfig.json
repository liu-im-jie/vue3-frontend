{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"compilerOptions": {
		"noEmit": true,

		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},

		"skipLibCheck": true,
		"types": ["node", "vite/client", "pinia-plugin-persistedstate"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"vite.config.ts",
		"uno.config.ts"
	],
	"exclude": ["node_modules", "dist"]
}
